          "label": "Social button logos",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "footer_social_button_hover",
          "label": "Social button hover",
          "default": "#F3F4F6"
        },
        {
          "type": "color",
          "id": "footer_social_button_bg",
          "label": "Social button background",
          "default": "#374151"
        },
        {
          "type": "color",
          "id": "footer_social_button_bghover",
          "label": "Social button background hover",
          "default": "#6B7280"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter form",
      "settings": [
        {
          "type": "header",
          "content": "Form styles"
        },
        {
          "type": "color",
          "id": "field_color",
          "label": "Field color",
          "default": "#FFFFFF"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text color",
            "default": "#000000"
        },
        {
            "type": "color",
            "id": "icon_color",
            "label": "Icon color",
            "default": "#000000"
        },
        {
            "type": "color",
            "id": "border_color",
            "label": "Border color",
            "default": "rgba(0,0,0,0)"
        },
        {
          "type": "range",
          "id": "field_height",
          "label": "Field height",
          "min": 24,
          "max": 70,
          "step": 1,
          "default": 42,
          "unit": "px"
        },
        {
          "type": "header",
          "content": "Button styles"
        },
        {
            "type": "color",
            "id": "btn_text_color",
            "label": "Text color",
            "default": "#6F665D"
        },
        {
            "type": "color",
            "id": "btn_border_color",
            "label": "Border color",
            "default": "rgba(0,0,0,0)"
        },
        {
            "type": "color",
            "id": "btn_bg_color",
            "label": "Background color",
            "default": "#6c0808"
        },
        {
          "type": "range",
          "id": "font_size",
          "label": "Font size",
          "min": 10,
          "max": 32,
          "step": 1,
          "default": 16,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "button_margin",
          "label": "Button margin",
          "min": 0,
          "max": 32,
          "step": 1,
          "default": 0,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "btn_border_radius",
          "label": "Border radius",
          "min": 0,
          "max": 32,
          "step": 1,
          "default": 0,
          "unit": "px"
        }
      ]
    },
    {
      "type": "navigation",
      "name": "Navigation",
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "label": "Footer menu"
        },
        {
          "type": "checkbox",
          "id": "show_rule",
          "label": "Show separator rule",
          "default": true
        },
        {
          "type": "color",
          "id": "rule_color",
          "label": "Rule color",
          "default": "#eeeeee"
        },
        {
          "type": "color",
          "id": "nav_color",
          "label": "Navigation color",
          "default": "#6a6a6a"
        }
      ]
    },
    {
      "type": "privacy",
      "name": "Privacy",
      "settings": [
        {
          "id": "html_content",
          "type": "html",
          "label": "Content",
          "info": "Enter as HTML",
          "default": "<li class='hover:underline'><a href=''/policies/privacy-policy'>Privacy Policy</a></li><li class='hover:underline'><a href='/policies/terms-of-service'>Terms of Service</a></li><li class='hover:underline'><a href='/policies/do-not-sell'>Do Not Sell My Personal Information</a></li>"
        },
        {
          "type": "color",
          "id": "privacy_color",
          "label": "Privacy links color",
          "default": "#6a6a6a"
        }
      ]
    },
    {
      "type": "copyright",
      "name": "Copyright and Bloom",
      "settings": [
        {
          "type": "text",
          "label": "Copyright notice",
          "id": "text",
          "default": "Please enjoy our wines responsibly."
        },
        {
          "type": "header",
          "content": "Powered by Bloom",
          "info": "Display the Powered by Bloom stamp in the footer."
        },
        {
          "type": "checkbox",
          "id": "powered_by_bloom",
          "label": "Show Powered by Bloom",
          "default": true
        },
        {
           "type": "image_picker",
           "id": "bloom_logo",
           "label": "Bloom Logo"
        }
      ]
    },
    {
      "type": "richtext",
      "name": "Richtext",
      "settings": [
        {
          "type": "text",
          "label": "Header",
          "id": "header",
          "default": "Richtext header"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }

  ]

}
{% endschema %}

