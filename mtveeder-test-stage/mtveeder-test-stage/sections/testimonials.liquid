
<section class="section" id="section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="container-7xl overflow-hidden">
    {% if section.settings.title != blank %}
        <div class="mb-7 md:mb-12 text-center">
          <h2 class="text-2xl font-semibold">{{ section.settings.title | escape }}</h2>
        </div>
      {% endif %}
    <div class="TestimonialList Carousel" >
      {%- for block in section.blocks -%}
        <div id="block-{{ block.id }}" class="w-full flex justify-center align-center text-center {% if forloop.first %}is-selected{% endif %}" {{ block.shopify_attributes }} >
          <div class="mx-auto max-w-lg text-lg">
            {%- if block.settings.quote != blank -%}
              {{ block.settings.quote }}
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>


    <div class="TestimonialNav Carousel__ButtonGroup">
      {%- for block in section.blocks -%}
        {%- if block.settings.logo != blank -%}
          <img class="w-24 md:w-36 TestimonialNav__Item Carousel__Button {% if forloop.first %}is-selected{% endif %}" src="{{ block.settings.logo | img_url: '300x' }}" alt="{{ block.settings.logo.alt | escape }}" data-index="{{ forloop.index0 }}">
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>

</section>

<style>
  #section-{{ section.id }} {
    background: {{ section.settings.background }};
  }
</style>

{% schema %}
{
  "name": "Testimonials",
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Testimonials"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#eaeaea"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo",
          "info": "340 x 80px .jpg recommended"
        },
        {
          "type": "richtext",
          "id": "quote",
          "label": "Quote",
          "default": "<p>Share what your customers are saying about your products, your company...</p>",
          "info": "For best results, keep the word count consistent in each quote."
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Testimonials",
      "settings": {},
      "blocks": [
        {
          "type": "testimonial",
          "settings": {}
        },
        {
          "type": "testimonial",
          "settings": {}
        },
        {
          "type": "testimonial",
          "settings": {}
        }
      ]
    }
  ]
}
{% endschema %}
