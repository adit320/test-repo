<section class="py-16">
  <div class="container-7xl">
    <div class="max-w-sm mx-auto text-center">
      {%- form 'create_customer', name: 'create_customer', id: 'create_customer' -%}
        <header>
          <h1 class="text-header text-3xl md:text-4xl mb-8">{{ 'customer.register.title' | t }}</h1>
          <p class="mb-5 text-sm body-color">{{ 'customer.register.description' | t }}</p>
        </header>

        {%- if form.errors -%}
          <div class="mb-5 text-sm body-color">
            <ul class="list-none  px-5 py-3 text-general-danger bg-general-danger_bg mb-6 text-left" >
              {%- for field in form.errors -%}
                <li>{{ form.errors.messages[field] }}</li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
        <div class="mb-3">
          <input type="text" class="w-full" name="customer[first_name]" aria-label="{{ 'customer.register.first_name' | t }}" placeholder="{{ 'customer.register.first_name' | t }}">
        </div>
        <div class="mb-3">
          <input type="text" class="w-full" name="customer[last_name]" aria-label="{{ 'customer.register.last_name' | t }}" placeholder="{{ 'customer.register.last_name' | t }}" autofocus>
        </div>
        <div class="mb-3">
          <input type="email" class="w-full" name="customer[email]" aria-label="{{ 'customer.register.email' | t }}" placeholder="{{ 'customer.register.email' | t }}" required="required">
        </div>
        <div class="mb-5">
          <input type="password" class="w-full" name="customer[password]" aria-label="{{ 'customer.register.password' | t }}" placeholder="{{ 'customer.register.password' | t }}" required="required">
        </div>
        <button type="submit" class="button-default w-full">{{ 'customer.register.submit' | t }}</button>
      {%- endform -%}
    </div>
  </div>
</section>